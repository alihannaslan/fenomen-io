{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ðŸ‘‡ Cloudflare Functions iÃ§in gerekli
    "types": ["@cloudflare/workers-types"],

    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": [
    "global.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "functions/**/*.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
